<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>

<VBox xmlns:fx="http://javafx.com/fxml"
      fx:controller="com.faheemtrading.controller.WatchlistController"
      spacing="12" stylesheets="@../css/app.css">

    <!-- input row -->
    <HBox spacing="10">
        <TextField  fx:id="nameField"   promptText="Watchlist name" />
        <TextField  fx:id="notesField"  promptText="Notes" />
        <ChoiceBox  fx:id="stockChoice" />
        <Button     fx:id="addBtn" text="Add"   onAction="#addOrSave"/>
        <Button     text="Cancel" onAction="#cancelEdit"/>
    </HBox>

    <!-- table -->
    <TableView fx:id="watchTable" VBox.vgrow="ALWAYS">
        <columns>
            <TableColumn fx:id="wId"    text="ID"   prefWidth="60"/>
            <TableColumn fx:id="wName"  text="Name" />
            <TableColumn fx:id="wStock" text="Stock"/>
            <TableColumn fx:id="wNotes" text="Notes"/>
            <TableColumn fx:id="wDate"  text="Added"/>
        </columns>
    </TableView>

    <HBox spacing="10">
        <Button text="Edit"   onAction="#startEdit"/>
        <Button text="Delete" onAction="#deleteSelected"/>
    </HBox>
</VBox>
