<?xml version="1.0" encoding="UTF-8"?>
<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>

<AnchorPane xmlns:fx="http://javafx.com/fxml" fx:controller="com.stockapp.controller.LoginController"
            stylesheets="@../css/login.css">
    <children>
        <VBox spacing="15" alignment="CENTER" layoutX="100" layoutY="50">
            <Label text="StockApp Login" styleClass="title"/>
            <TextField fx:id="emailField" promptText="Email"/>
            <PasswordField fx:id="passwordField" promptText="Password"/>
            <HBox spacing="10" alignment="CENTER">
                <Button text="Login" onAction="#onLogin"/>
                <Button text="Register" onAction="#onRegister"/>
            </HBox>
            <Label fx:id="messageLabel" styleClass="error"/>
        </VBox>
    </children>
</AnchorPane>
