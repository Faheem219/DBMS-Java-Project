<?xml version="1.0" encoding="UTF-8"?>
<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>

<AnchorPane xmlns:fx="http://javafx.com/fxml"
            fx:controller="com.stockapp.controller.RegisterController"
            stylesheets="@../css/register.css">
    <children>
        <VBox spacing="15" alignment="CENTER" layoutX="80" layoutY="30">
            <Label text="Create Account" styleClass="title"/>

            <HBox spacing="10" alignment="CENTER_LEFT">
                <Label text="User ID:" minWidth="80"/>
                <TextField fx:id="idField" promptText="e.g. 101"/>
            </HBox>

            <HBox spacing="10" alignment="CENTER_LEFT">
                <Label text="Name:" minWidth="80"/>
                <TextField fx:id="nameField" promptText="Your full name"/>
            </HBox>

            <HBox spacing="10" alignment="CENTER_LEFT">
                <Label text="Email:" minWidth="80"/>
                <TextField fx:id="emailField" promptText="you@example.com"/>
            </HBox>

            <HBox spacing="10" alignment="CENTER_LEFT">
                <Label text="Password:" minWidth="80"/>
                <PasswordField fx:id="passwordField" promptText="••••••"/>
            </HBox>

            <HBox spacing="20" alignment="CENTER">
                <Button text="Register" onAction="#onRegister"/>
                <Button text="Back to Login" onAction="#onBackToLogin"/>
            </HBox>

            <Label fx:id="messageLabel" styleClass="error"/>
        </VBox>
    </children>
</AnchorPane>
