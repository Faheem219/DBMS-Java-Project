<?xml version="1.0" encoding="UTF-8"?>
<?import javafx.scene.layout.*?>
<?import javafx.scene.control.*?>

<AnchorPane xmlns:fx="http://javafx.com/fxml"
            fx:controller="com.stockapp.controller.WatchlistController"
            stylesheets="@../css/watchlist.css">
    <children>
        <VBox spacing="10" AnchorPane.topAnchor="0" AnchorPane.leftAnchor="0"
              AnchorPane.rightAnchor="0" AnchorPane.bottomAnchor="0">
            <HBox spacing="10">
                <Label text="My Watchlist" styleClass="title"/>
                <Region HBox.hgrow="ALWAYS"/>
                <Button text="Add"     onAction="#onAdd"/>
                <Button text="Delete"  onAction="#onDelete"/>
                <Button text="Refresh" onAction="#onRefresh"/>
            </HBox>
            <TableView fx:id="table" VBox.vgrow="ALWAYS">
                <columns>
                    <TableColumn fx:id="colId"    text="ID"    prefWidth="60"/>
                    <TableColumn fx:id="colName"  text="Name"  prefWidth="150"/>
                    <TableColumn fx:id="colNotes" text="Notes" prefWidth="200"/>
                    <TableColumn fx:id="colStock" text="Stock" prefWidth="150"/>
                    <TableColumn fx:id="colDate"  text="Added" prefWidth="100"/>
                </columns>
            </TableView>
        </VBox>
    </children>
</AnchorPane>
