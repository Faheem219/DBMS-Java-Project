<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.*?>
<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>

<BorderPane xmlns:fx="http://javafx.com/fxml"
            fx:controller="com.faheemtrading.controller.LoginController"
            stylesheets="@../css/form.css">

    <!-- ===== Top banner / brand ===== -->
    <top>
        <VBox alignment="CENTER" spacing="4" BorderPane.alignment="CENTER">
            <Label text="StockHub – Java Mini Project" styleClass="h3"/>
            <Label text="MySQL ▪ JavaFX 17 ▪ BootstrapFX"
                   styleClass="text-muted, small"/>
        </VBox>
    </top>

    <!-- ===== Login card ===== -->
    <center>
        <VBox alignment="CENTER" spacing="18" BorderPane.alignment="CENTER">
            <StackPane styleClass="card" maxWidth="360">
                <VBox spacing="14">
                    <padding><Insets top="30" right="30" bottom="30" left="30"/></padding>

                    <Label text="Welcome back" styleClass="h4"/>

                    <TextField fx:id="emailField" promptText="Email"
                               styleClass="form-control"/>

                    <PasswordField fx:id="passwordField" promptText="Password"
                                   styleClass="form-control"/>

                    <HBox spacing="10" alignment="CENTER">
                        <Button text="Login"    styleClass="btn, btn-primary"
                                onAction="#onLogin"/>
                        <Button text="Register" styleClass="btn, btn-outline-primary"
                                onAction="#openRegister"/>
                    </HBox>

                    <Separator/>

                    <!-- quick highlights (your wording) -->
                    <Label text="Highlights" styleClass="h5"/>
                    <Label wrapText="true" styleClass="small" text="
 • Track portfolios &amp; trades in one place
 • Auto‑generated analytics &amp; ROI charts
 • Gemini‑powered chat assistance
 "/>
                </VBox>
            </StackPane>
        </VBox>
    </center>

    <!-- ===== footer ===== -->
    <bottom>
        <HBox alignment="CENTER" >
            <padding><Insets top="6" right="6" bottom="6" left="6"/></padding>
            <Label text="©2025 StockHub" styleClass="text-muted, small"/>
        </HBox>
    </bottom>
</BorderPane>