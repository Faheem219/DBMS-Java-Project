<?xml version="1.0" encoding="UTF-8"?>
<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>

<BorderPane xmlns="http://javafx.com/javafx/17"
            xmlns:fx="http://javafx.com/fxml/1"
            fx:controller="com.trader.stockhubv4.controller.MainController"
            stylesheets="@../css/style.css">

    <!-- Sidebar / Drawer -->
    <left>
        <VBox fx:id="sidebar" spacing="10" styleClass="sidebar" alignment="TOP_CENTER">
            <Label text="StockHub v4" styleClass="sidebar-title"/>
            <Button text="Dashboard"    onAction="#showDashboard"  styleClass="sidebar-button"/>
            <Button text="Users"        onAction="#showUsers"      styleClass="sidebar-button"/>
            <Button text="Portfolios"   onAction="#showPortfolios" styleClass="sidebar-button"/>
            <Button text="Stocks"       onAction="#showStocks"     styleClass="sidebar-button"/>
            <Button text="Trades"       onAction="#showTrades"     styleClass="sidebar-button"/>
            <Button text="Logout"       onAction="#onLogout"       styleClass="sidebar-button"/>
        </VBox>
    </left>

    <!-- Main content area -->
    <center>
        <StackPane fx:id="contentPane"/>
    </center>
</BorderPane>
