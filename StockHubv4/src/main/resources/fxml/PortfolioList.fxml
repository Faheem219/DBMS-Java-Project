<?xml version="1.0" encoding="UTF-8"?>
<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>

<AnchorPane xmlns="http://javafx.com/javafx/17"
            xmlns:fx="http://javafx.com/fxml/1"
            fx:controller="com.trader.stockhubv4.controller.PortfolioListController"
            stylesheets="@../css/style.css">

    <Label text="Portfolios" styleClass="title-label"
           AnchorPane.topAnchor="10" AnchorPane.leftAnchor="20"/>

    <TableView fx:id="tablePortfolios"
               AnchorPane.topAnchor="50" AnchorPane.leftAnchor="20"
               AnchorPane.rightAnchor="20" AnchorPane.bottomAnchor="60">
        <columns>
            <TableColumn fx:id="colPid"    text="ID"         prefWidth="50"/>
            <TableColumn fx:id="colPname"  text="Name"       prefWidth="150"/>
            <TableColumn fx:id="colPdate"  text="Created On" prefWidth="120"/>
            <TableColumn fx:id="colPvalue" text="Total Value" prefWidth="100"/>
            <TableColumn fx:id="colPuser"  text="User ID"    prefWidth="80"/>
        </columns>
    </TableView>

    <HBox spacing="10"
          AnchorPane.bottomAnchor="10" AnchorPane.leftAnchor="20">
        <Button text="Add"     onAction="#onAdd"/>
        <Button text="Edit"    onAction="#onEdit"/>
        <Button text="Delete"  onAction="#onDelete"/>
        <Button text="Refresh" onAction="#onRefresh"/>
    </HBox>
</AnchorPane>
