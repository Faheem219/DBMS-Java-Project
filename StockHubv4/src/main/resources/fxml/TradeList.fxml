<?xml version="1.0" encoding="UTF-8"?>
<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>

<AnchorPane xmlns="http://javafx.com/javafx/17"
            xmlns:fx="http://javafx.com/fxml/1"
            fx:controller="com.trader.stockhubv4.controller.TradeListController"
            stylesheets="@../css/style.css">

    <Label text="Trades" styleClass="title-label"
           AnchorPane.topAnchor="10" AnchorPane.leftAnchor="20"/>

    <TableView fx:id="tableTrades"
               AnchorPane.topAnchor="50" AnchorPane.leftAnchor="20"
               AnchorPane.rightAnchor="20" AnchorPane.bottomAnchor="60">
        <columns>
            <TableColumn fx:id="colTid"   text="ID"     prefWidth="50"/>
            <TableColumn fx:id="colPrice" text="Price"  prefWidth="100"/>
            <TableColumn fx:id="colDate"  text="Date"   prefWidth="120"/>
            <TableColumn fx:id="colQty"   text="Qty"    prefWidth="80"/>
            <TableColumn fx:id="colUser"  text="UserID" prefWidth="80"/>
            <TableColumn fx:id="colPort"  text="PortID" prefWidth="80"/>
            <TableColumn fx:id="colStock" text="StockID" prefWidth="80"/>
        </columns>
    </TableView>

    <HBox spacing="10"
          AnchorPane.bottomAnchor="10" AnchorPane.leftAnchor="20">
        <Button text="Add"     onAction="#onAdd"/>
        <Button text="Edit"    onAction="#onEdit"/>
        <Button text="Delete"  onAction="#onDelete"/>
        <Button text="Refresh" onAction="#onRefresh"/>
    </HBox>
</AnchorPane>
