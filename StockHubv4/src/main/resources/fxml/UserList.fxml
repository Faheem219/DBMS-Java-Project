<?xml version="1.0" encoding="UTF-8"?>
<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>

<AnchorPane xmlns="http://javafx.com/javafx/17"
            xmlns:fx="http://javafx.com/fxml/1"
            fx:controller="com.trader.stockhubv4.controller.UserListController"
            stylesheets="@../css/style.css">

    <Label text="Users" styleClass="title-label"
           AnchorPane.topAnchor="10" AnchorPane.leftAnchor="20"/>

    <TableView fx:id="tableUsers"
               AnchorPane.topAnchor="50" AnchorPane.leftAnchor="20"
               AnchorPane.rightAnchor="20" AnchorPane.bottomAnchor="60">
        <columns>
            <TableColumn fx:id="colUserId"   text="ID"       prefWidth="50"/>
            <TableColumn fx:id="colName"     text="Name"     prefWidth="150"/>
            <TableColumn fx:id="colEmail"    text="Email"    prefWidth="200"/>
            <TableColumn fx:id="colPassword" text="Password" prefWidth="150"/>
        </columns>
    </TableView>

    <HBox spacing="10"
          AnchorPane.bottomAnchor="10" AnchorPane.leftAnchor="20">
        <Button text="Add"     onAction="#onAdd"/>
        <Button text="Edit"    onAction="#onEdit"/>
        <Button text="Delete"  onAction="#onDelete"/>
        <Button text="Refresh" onAction="#onRefresh"/>
    </HBox>
</AnchorPane>
