<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>
<?import javafx.geometry.Insets?>

<AnchorPane xmlns:fx="http://javafx.com/fxml"
            fx:controller="com.faheemtrading.controller.PortfolioController">
    <VBox spacing="15" AnchorPane.topAnchor="0" AnchorPane.leftAnchor="0"
          AnchorPane.rightAnchor="0" AnchorPane.bottomAnchor="0" padding="20">
        <Label text="Portfolios" styleClass="view-title"/>

        <TableView fx:id="portfolioTable" prefHeight="350">
            <columns>
                <TableColumn text="ID" fx:id="colId" prefWidth="60"/>
                <TableColumn text="Name" fx:id="colName" prefWidth="180"/>
                <TableColumn text="Created" fx:id="colDate" prefWidth="120"/>
                <TableColumn text="Value" fx:id="colValue" prefWidth="120"/>
            </columns>
        </TableView>

        <HBox spacing="10">
            <Button text="Add" onAction="#addPortfolio" styleClass="primary-btn"/>
            <Button text="Edit" onAction="#editPortfolio" styleClass="primary-btn"/>
            <Button text="Delete" onAction="#deletePortfolio" styleClass="danger-btn"/>
            <Button text="Report" onAction="#exportReport" styleClass="primary-btn"/>
            <Region HBox.hgrow="ALWAYS"/>
            <Button text="Refresh" onAction="#refresh" styleClass="side-btn"/>
        </HBox>
    </VBox>
</AnchorPane>
