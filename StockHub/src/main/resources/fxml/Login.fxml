<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.Button?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.control.PasswordField?>
<?import javafx.scene.control.TextField?>
<?import javafx.scene.layout.VBox?>

<VBox fx:id="loginVBox" alignment="CENTER" spacing="10.0" xmlns="http://javafx.com/javafx/17" xmlns:fx="http://javafx.com/fxml/1" fx:controller="com.trader.stockhub.controllers.LoginController">
    <Label text="Stock Trading Management System" style="-fx-font-size: 20px; -fx-font-weight: bold;"/>
    <TextField fx:id="emailField" promptText="Email" maxWidth="300.0"/>
    <PasswordField fx:id="passwordField" promptText="Password" maxWidth="300.0"/>
    <Button text="Login" onAction="#handleLogin"/>
    <Label fx:id="errorLabel" textFill="red"/>
</VBox>